{
  "name": "docyui",
  "version": "0.0.1",
  "private": true,
  "description": "DocyUI Component Library Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:registry": "turbo run build --filter=@docyui/registry",
    "sync": "pnpm build:registry && turbo run build --filter=@docyui/docs",
    "sync:watch": "pnpm sync && chokidar 'packages/cli-*/**/*.{tsx,vue}' -c 'pnpm sync'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:root": "eslint . --config eslint.config.mjs",
    "typecheck": "turbo run typecheck"
  },
  "dependencies": {
    "@tailwindcss/postcss": "4.1.11",
    "autoprefixer": "10.4.21",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "9.31.0",
    "@types/node": "24.0.14",
    "@typescript-eslint/eslint-plugin": "8.37.0",
    "@typescript-eslint/parser": "8.37.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "9.31.0",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.3.0",
    "turbo": "2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}