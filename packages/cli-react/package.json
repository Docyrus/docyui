{
  "name": "@docyui/react",
  "version": "0.0.1",
  "description": "CLI for adding React components from DocyUI",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "docyui-react": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --config ../../eslint.config.mjs",
    "lint:fix": "eslint . --config ../../eslint.config.mjs --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@docyui/shared": "workspace:*",
    "@radix-ui/react-slot": "1.2.3",
    "chalk": "5.4.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "commander": "14.0.0",
    "lucide-react": "0.525.0",
    "ora": "8.2.0",
    "prompts": "2.4.2",
    "react": "19.1.0",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@types/node": "24.0.14",
    "@types/prompts": "2.4.9",
    "@types/react": "19.1.8",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  }
}